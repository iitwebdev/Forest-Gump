{%  block leftblock%}
    <h1>Мои деревья</h1>
    <h2>Добавьте родственников</h2>
	<p>
    <form method="post">
        <table>
            <tr><td align="right">Фамилия</td>
            <td><input type="text" name="surname" size="25"></td></tr>

            <tr><td align="right">Имя</td>
            <td><input type="text" name="name" size="25"></td></tr>

            <tr><td align="right">Отчество</td>
            <td><input type="text" name="middle_name" size="25"></td></tr>

            <tr><td align="right">Годы жизни</td>
            <td><input type="text" name="birth" size="9"> - <input type="text" name="end" size="9"></td></tr>

            <tr><td align="right">Пол</td>
            <td><input type="radio" name="sex" value="man" checked>мужской
            <input type="radio" name="sex" value="woman">женский</td></tr>

            <tr><td align="right">Место рождения</td>
            <td><input type="text" name="birthplace" size="25"></td></tr>

            <tr><td align="center" colspan="2">
            <input type="submit" name="submit" value="Добавить человека"></td></tr>
        </table>
    </form>
    </p>
    <h2>Укажите связи</h2>
    <p>
        <form method="post">
            <table>
                <tr><td align="center">1.
                    <select size="1" name="people1">
                        {% for guy in guys %}
                            <option value = "{{guy}}">{{guy}}</option>
                        {% endfor %}
                    </select>
                </td>
                <td align="center">2.
                    <select size="1" name="people2">
                        {% for guy in guys %}
                            <option value = "{{guy}}">{{guy}}</option>
                        {% endfor %}
                    </select>
                </td>
                <td align="center">1 для 2:
                    <select size="1" name="relations">
                        {% for relation in relations %}
                            <option value = "{{relation}}">{{relation}}</option>
                        {% endfor %}
                    </select>
                </td></tr>
                <tr><td align="center" colspan="3">
                <input type="submit" name="submit_relations" value="Добавить связь"></td></tr>
            </table>
        </form>
        <div id="relation_table">
            <table>
                {% for key in dict_relations %}
                    <tr><td align="center">
                        {{ dict_relations[key][0] }}
                    </td>
                    <td align="center">
                        {{ dict_relations[key][1]}}
                    </td>
                    <td align="center">
                        {{ key }}
                    </td></tr>
                {% endfor %}
            </table>
        </div>
    </p>
{% endblock %}