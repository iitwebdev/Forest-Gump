{%  block sidebar%}
    <div id="sidebar">
		<h2>Действия</h2>
		<ul>
			<li class="active"><a href="profile">Мой профиль</a></li>
			<li><a href="trees">Мои древа</a></li>
			<li><a href="add">Добавить древо</a></li>
		</ul>
